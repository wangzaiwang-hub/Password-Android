<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="自定义背景"
        android:textAppearance="@style/TitleLarge"
        android:textColor="?attr/colorOnSurface" />

    <!-- 当前背景预览 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/backgroundPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/surface"
            android:contentDescription="背景预览" />

        <TextView
            android:id="@+id/noBackgroundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="暂无自定义背景"
            android:textAppearance="@style/BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </com.google.android.material.card.MaterialCardView>

    <!-- 透明度设置 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="背景透明度"
        android:textAppearance="@style/TitleMedium"
        android:textColor="?attr/colorOnSurface" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="透明"
            android:textAppearance="@style/BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <com.google.android.material.slider.Slider
            android:id="@+id/opacitySlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:valueFrom="0.1"
            android:valueTo="1.0"
            android:value="0.3"
            android:stepSize="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不透明"
            android:textAppearance="@style/BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- 透明度数值显示 -->
    <TextView
        android:id="@+id/opacityValueText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="透明度: 30%"
        android:textAppearance="@style/BodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectImageButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="选择图片"
            app:icon="@drawable/ic_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearBackgroundButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="清除背景"
            android:textColor="?attr/colorError" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/applyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用" />

    </LinearLayout>

</LinearLayout>